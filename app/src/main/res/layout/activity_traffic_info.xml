<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_35sdp"
    android:orientation="vertical"
    android:paddingEnd="@dimen/_15sdp"
    android:paddingStart="@dimen/_15sdp"
    tools:context=".ui.activity.TrafficInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/destination_report_layout"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_red_hodop_logo"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/to_fro_layout"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/to_fro_icon"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/oval_success"
                android:layout_height="@dimen/_15sdp"/>
            <View
                android:layout_width="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_25sdp"
                android:background="@color/white"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/oval_success"
                android:layout_height="@dimen/_15sdp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/to_fro_icon"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From Loctation"
                    android:id="@+id/from_loctaion_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Destination"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/to_loctaion_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"/>

            </LinearLayout>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/grey"
            android:textSize="@dimen/_14ssp"
            android:id="@+id/traffic_report_text"
            android:layout_below="@id/to_fro_layout"
            android:text="The traffic report for the selected location is heavy at the moment"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_15sdp"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="87"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textSize="@dimen/_55ssp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_gravity="end"
            android:src="@drawable/ic_reddish" />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:weightSum="1.0"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardElevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_weight="0.5"
                android:id="@+id/traffic_report_card"
                android:layout_marginEnd="@dimen/_20sdp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_reddish"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Traffic Report"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardElevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_weight="0.5"
                android:id="@+id/alter_route_card"
                app:cardBackgroundColor="@color/colorPrimaryDarker"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_greyish"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Alternative Route"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:weightSum="1.0"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardElevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:id="@+id/share_traffic_report_card"
                android:layout_weight="0.5"
                android:layout_marginEnd="@dimen/_20sdp"
                app:cardBackgroundColor="@color/colorPrimaryDarker"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_green_white"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Share Traffic Report"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardElevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_weight="0.5"
                android:id="@+id/post_on_hodop_card"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_yellow_grey"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Post on Hodop"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>